{
    "name": "boilerplate-react-webpack",
    "version": "0.1.1",
    "description": "A webpack React starter",
    "repository": "https://github.com/dev-academy-challenges/boilerplate-react-webpack.git",
    "main": "server/index.js",
    "scripts": {
        "postinstall": "webpack && knex migrate:latest",
        "dev": "nodemon --watch server server/index & webpack --watch",
        "start": "node server/index",
        "test": "jest",
        "h:deploy": "git push heroku master",
        "h:cliff": "git push heroku deploy:master",
        "h:migrate": "heroku run knex migrate:latest",
        "h:rollback": "heroku run knex migrate:rollback",
        "h:seed": "heroku run knex seed:run",
        "knex": "knex",
        "lint": "eslint . --fix",
        "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
    },
    "nodemonConfig": {
        "ignore": [
            "node_modules/*"
        ]
    },
    "jest": {
        "collectCoverage": true
    },
    "babel": {
        "presets": [
            "es2015",
            "react",
            "stage-0"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --fix",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ]
    },
    "author": "EDA",
    "license": "ISC",
    "devDependencies": {
        "@types/react": "^16.9.10",
        "@types/react-dom": "^16.9.2",
        "@types/react-redux": "^7.1.5",
        "@types/react-router-dom": "^5.1.0",
        "awesome-typescript-loader": "^5.2.1",
        "enzyme": "^3.10.0",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "prettier": "^1.18.2",
        "sqlite3": "^4.1.0",
        "supertest": "^4.0.2",
        "typescript": "^3.6.4",
        "webpack-cli": "^3.3.9"
    },
    "dependencies": {
        "@types/socket.io": "^2.1.4",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.6",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "bulma": "^0.8.0",
        "cors": "^2.8.5",
        "css-loader": "^3.2.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-jwt": "^5.3.1",
        "font-awesome": "^4.7.0",
        "jsdom": "^15.2.0",
        "jsonwebtoken": "^8.5.1",
        "jsx-loader": "^0.13.2",
        "jwt-decode": "^2.2.0",
        "knex": "^0.19.5",
        "moment": "^2.24.0",
        "nock": "^11.6.0",
        "node-sass": "^4.13.0",
        "passport": "^0.4.0",
        "pg": "^7.12.1",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.1.2",
        "react-test-renderer": "^16.11.0",
        "react-tippy": "^1.3.1",
        "redux": "^4.0.4",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "sass-loader": "^8.0.0",
        "socket.io": "^2.3.0",
        "socket.io-client": "^2.3.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.0.0",
        "superagent": "^5.1.0",
        "webpack": "^4.41.2",
        "webpack-dev-server": "^3.9.0"
    }
}
